#!/usr/bin/env zsh
mydir=`dirname $0`
if [[ $mydir = . ]]; then
	mydir=`pwd`
fi
dest=$HOME

mkdir -p $HOME/.zsh/
ln -s $mydir/func $HOME/.zsh/

echo My Directory: $mydir
cp $HOME/.zshenv $HOME/.zshenv.pre_zshkit
cp $HOME/.zshrc $HOME/.zshrc.pre_zshkit
echo "source $mydir/env" > $HOME/.zshenv
echo "source $mydir/rc" > $HOME/.zshrc
